
const http = require('http')

const server = http.createServer((req, res)=>{
  console.log(req.url,req.method,req.headers);
  res.setHeader('Containt-Type','text/html');
  res.write(`<html>`)
  res.write(`<head><title>Hello Node .js</title></head>`)
  res.write(`<body><h1>Hello World </br> Welcone to My Node Js server!</h1></body>`)
  res.write(`</html>`)
  res.end();
  // process.exit()
});
server.listen(3000);


